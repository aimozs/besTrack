<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>
<%= link_to '+', new_task_path, class: 'btn btn-info' %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Estimatedtime</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><% if user_signed_in? %>
          <%= link_to 'X', task, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        <%= link_to task.name, task %></td>
        <td><%= task.estimatedTime.strftime("%H : %M")%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


